{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true,
    "allowJs": true,
    "checkJs": false
  },
  "imports": {
    "supabase": "https://esm.sh/@supabase/supabase-js@2"
  },
  "tasks": {
    "serve": "deno serve --allow-net --allow-env --watch"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
